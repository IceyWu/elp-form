{
  "compilerOptions": {
    "target": "ES2017",
    "module": "ESNext",
    "jsx": "preserve",
    "lib": ["DOM", "ESNext"],
    "skipLibCheck": true,
    "isolatedModules": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "types": ["node", "vite/client", "vitest/globals"],
  },
  "include": [
    "packages/**/**/*",
    "packages/**/*",
    "src/*.ts",
    "src/*.tsx",
    "src/*.vue",
    "vite.config.ts",
    "__tests__/*",
    "volar.d.ts",
  ],
  "exclude": ["node_modules", "dist"]
}